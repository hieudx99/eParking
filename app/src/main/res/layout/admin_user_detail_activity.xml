                    android:layout_height="wrap_content"
                    android:layout_marginTop="7dp"
                    android:enabled="false"
                    android:textStyle="bold"
                    android:textColor="#6F6E6E"
                    android:background="@drawable/rounded_edittext_with_border_disable"
                    android:inputType="text"
                    android:minHeight="48dp"
                    android:padding="10dp"
                    tools:ignore="SpeakableTextPresentCheck" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="32dp"
                android:paddingStart="54dp"
                android:paddingEnd="54dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="CHỨNG MINH THƯ"
                    android:textColor="@color/black"
                    android:textSize="15dp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/edt_identityCard"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="7dp"
                    android:enabled="false"
                    android:textStyle="bold"
                    android:textColor="#6F6E6E"
                    android:background="@drawable/rounded_edittext_with_border_disable"
                    android:minHeight="48dp"
                    android:padding="10dp"
                    tools:ignore="SpeakableTextPresentCheck" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="32dp"
                android:paddingStart="54dp"
                android:paddingEnd="54dp"

                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="SỐ ĐIỆN THOẠI"
                    android:textColor="@color/black"
                    android:textSize="15dp"
                    android:textStyle="bold" />
                <EditText
                    android:id="@+id/edt_telephone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="7dp"
                    android:enabled="false"
                    android:textStyle="bold"
                    android:textColor="#6F6E6E"
                    android:background="@drawable/rounded_edittext_with_border_disable"
                    android:minHeight="48dp"
                    android:padding="10dp"
                    tools:ignore="SpeakableTextPresentCheck" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="54dp"
                android:paddingEnd="54dp"
                android:layout_marginBottom="32dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ĐỊA CHỈ"
                    android:textColor="@color/black"
                    android:textSize="15dp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/edt_address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="7dp"
                    android:enabled="false"
                    android:textStyle="bold"
                    android:textColor="#6F6E6E"
                    android:background="@drawable/rounded_edittext_with_border_disable"
                    android:minHeight="48dp"
                    android:padding="10dp"
                    tools:ignore="SpeakableTextPresentCheck" />
            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rcv_admin_user_detail_list_car"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

        </LinearLayout>


