<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingStart="54dp"
    android:paddingEnd="54dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txt_item_user_car_license_plate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="BIỂN SỐ XE (XE 1)"
            android:textColor="@color/black"
            android:textSize="15dp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/edt_item_user_car_license_plate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:enabled="false"
            android:textStyle="bold"
            android:textColor="#6F6E6E"
            android:background="@drawable/rounded_edittext_with_border_disable"
            android:minHeight="48dp"
            android:padding="10dp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txt_item_user_car_car_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TÊN XE (XE 1)"
            android:textColor="@color/black"
            android:textSize="15dp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/edt_item_user_car_car_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:enabled="false"
            android:textStyle="bold"
            android:textColor="#6F6E6E"
            android:background="@drawable/rounded_edittext_with_border_disable"
            android:minHeight="48dp"
            android:padding="10dp" />
    </LinearLayout>

</LinearLayout>